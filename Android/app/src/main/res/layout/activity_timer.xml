<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">

    <EditText
        android:hint="@string/select_contact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Contact_number_id"
        android:layout_weight="0.1"
        android:textAppearance="?android:attr/textAppearanceMedium"/>


    <EditText
        android:hint="@string/emergency_contact_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/emergency_contact_name_text"
        android:layout_weight="0.14"
        android:textAppearance="?android:attr/textAppearanceMedium"/>

    <EditText
        android:hint="@string/emergency_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/emergency_message_id"
        android:layout_weight="0.25"
        android:textAppearance="?android:attr/textAppearanceMedium"/>

    <CheckBox
        android:text="@string/save_emergency_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/checkBox"
        android:layout_weight="0.1"
        android:textAppearance="?android:attr/textAppearanceMedium"/>
    <EditText
        android:hint="@string/select_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/select_time"
        android:layout_weight="0.15"
        android:textAppearance="?android:attr/textAppearanceMedium"/>
    <Button
        android:text="@string/start_timer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnBeginTimerActivity"
        android:layout_weight="0.1"
        android:background="@android:color/holo_blue_light"
        android:textColor="@android:color/white"
        android:textAppearance="?android:attr/textAppearanceMedium"/>


</LinearLayout>